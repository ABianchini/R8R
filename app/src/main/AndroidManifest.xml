<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.animationbureau.r8r">

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="23" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/r8r_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/r8rTheme">
        <activity android:name="com.animationbureau.r8r.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />

            </intent-filter>
        </activity>

        <activity
            android:name="com.animationbureau.r8r.ListActivity"
            android:parentActivityName="com.animationbureau.r8r.MainActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.animationbureau.r8r.MainActivity" />
        </activity>
    </application>

</manifest>